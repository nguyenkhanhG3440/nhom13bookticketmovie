<!-- views/theater.ejs -->
<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Danh sách rạp chiếu</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <style>
        body {
            background-color: #1a1a1a; /* Nền tối để phù hợp với chủ đề rạp chiếu phim */
            color: #ffffff; /* Chữ trắng để nổi trên nền tối */
            font-family: 'Arial', sans-serif;
        }

        .container {
            max-width: 1200px;
            margin: 0 auto;
            padding: 40px 15px;
        }

        h2 {
            font-size: 32px;
            font-weight: 700;
            color: #ffffff;
            text-align: center;
            margin-bottom: 40px;
            text-transform: uppercase;
            letter-spacing: 2px;
        }

        .card {
            background-color: #2c2c2c; /* Nền card tối */
            border: none;
            border-radius: 10px;
            overflow: hidden;
            transition: all 0.3s ease;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.3);
        }

        .card:hover {
            transform: translateY(-5px);
            box-shadow: 0 8px 20px rgba(0, 0, 0, 0.5);
        }

        .card-img-top {
            height: 200px;
            object-fit: cover; /* Đảm bảo ảnh không bị méo */
            border-bottom: 2px solid #e74c3c; /* Đường viền đỏ dưới ảnh */
        }

        .card-body {
            padding: 20px;
        }

        .card-title {
            font-size: 20px;
            font-weight: 600;
            color: #ffffff;
            margin-bottom: 10px;
        }

        .card-text {
            font-size: 16px;
            color: #d1d1d1; /* Chữ xám nhạt để nổi trên nền tối */
            line-height: 1.5;
        }

        /* Responsive adjustments */
        @media (max-width: 768px) {
            .card-img-top {
                height: 150px;
            }

            .card-title {
                font-size: 18px;
            }

            .card-text {
                font-size: 14px;
            }
        }
    </style>
</head>
<body>
    <%- include('../partials/header') %>

    <div class="container mt-5">
        <h2 class="text-white mb-4">Danh sách rạp chiếu</h2>
        <div class="row">
            <% theaters.forEach(rap => { %>
                <div class="col-md-4 mb-4">
                    <div class="card h-100">
                        <img src="<%= rap.urlImage %>" class="card-img-top" alt="<%= rap.ten %>">
                        <div class="card-body">
                            <h5 class="card-title"><%= rap.ten %></h5>
                            <p class="card-text"><%= rap.diaChi %></p>
                        </div>
                    </div>
                </div>
            <% }) %>
        </div>
    </div>

    <%- include('../partials/footer') %>
</body>
</html>